{
  "name": "valotas.com",
  "version": "2.2.3",
  "repository": "git@github.com:valotas/valotas.com.git",
  "private": true,
  "devDependencies": {
    "@types/gulp-util": "^3.0.34",
    "@types/jasmine": "^2.8.6",
    "@types/marked": "^0.3.0",
    "@types/node": "^9.6.2",
    "@types/node-fetch": "^1.6.8",
    "@types/pug": "^2.0.3",
    "@types/through2": "^2.0.32",
    "@types/vinyl-fs": "^2.4.8",
    "browser-sync": "^2.23.6",
    "eslint": "^4.19.1",
    "eslint-plugin-typescript": "^0.11.0",
    "gulp": "3.9.1",
    "gulp-cssmin": "0.2.0",
    "gulp-html-replace": "1.6.2",
    "gulp-htmlmin": "^4.0.0",
    "gulp-if": "2.0.2",
    "gulp-inject": "^4.3.2",
    "gulp-jasmine": "^3.0.0",
    "gulp-rename": "1.2.2",
    "gulp-rev": "^8.1.1",
    "gulp-sass": "^4.0.0",
    "gulp-util": "3.0.8",
    "jasmine-core": "^3.1.0",
    "node-fetch": "1.7.0",
    "node-progress": "^0.1.0",
    "prettier": "^1.11.1",
    "pug": "^2.0.3",
    "rimraf": "^2.6.2",
    "systemjs": "^0.20.19",
    "systemjs-builder": "^0.16.12",
    "through2": "2.0.3",
    "tslib": "^1.9.0",
    "typescript": "^2.8.1",
    "typescript-eslint-parser": "^14.0.0",
    "vinyl": "^2.1.0",
    "vinyl-fs": "^3.0.2",
    "yargs": "^8.0.1"
  },
  "scripts": {
    "postinstall": "npm rebuild node-sass",
    "tsc": "tsc --version && tsc -p . -w",
    "build": "rm -rf build && gulp build",
    "dist": "rm -rf dist build && gulp dist",
    "dist:serve": "npm run dist && gulp serve-dist",
    "gulp": "gulp",
    "prettier": "prettier '{gulp,src}/**/*.{ts,js,tsx}' --single-quote",
    "fmt": "npm run prettier -- --write",
    "lint:src": "eslint --ext .js --ext .ts --ext .tsx .",
    "lint:fmt": "npm run prettier -- --list-different",
    "lint": "npm run lint:fmt && npm run lint:src",
    "test": "gulp tsc && gulp test",
    "rsync": "rsync -azP dist/ valotas@pi:~/valotas.com",
    "aws:sync": "aws s3 sync dist s3://valotas.com",
    "aws:upload-redirect-rules": "node build/typescript/gulp/awsUploadRedirectRules.js",
    "upload-dist": "npm run aws:sync && npm run aws:upload-redirect-rules",
    "deploy": "npm version patch -m \"Release v%s\"",
    "preversion": "npm run lint && npm test",
    "postversion": "npm run dist && npm run upload-dist && git push origin master --tags",
    "start": "gulp play"
  },
  "dependencies": {
    "base64-js": "^1.2.1",
    "font-awesome": "^4.2.0",
    "foundation-sites": "^6.4.3",
    "marked": "^0.3.9",
    "moment": "^2.22.0",
    "preact": "^8.2.7",
    "preact-render-to-string": "^3.6.0",
    "prismjs": "^1.13.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ],
    "env": {
      "es6": true
    },
    "rules": {
      "arrow-parens": [
        2,
        "as-needed"
      ],
      "arrow-spacing": 2,
      "comma-dangle": [
        2,
        "never"
      ],
      "constructor-super": 2,
      "consistent-this": [
        2,
        "self"
      ],
      "eqeqeq": 2,
      "curly": 2,
      "no-var": 2,
      "one-var": [
        2,
        "never"
      ],
      "prefer-arrow-callback": 2,
      "strict": [
        2,
        "safe"
      ]
    }
  }
}
