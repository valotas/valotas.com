{
  "name": "valotas.com",
  "version": "2.1.1",
  "repository": "git@github.com:valotas/valotas.com.git",
  "private": true,
  "devDependencies": {
    "@types/gulp-util": "^3.0.29",
    "@types/jasmine": "^2.5.38",
    "@types/marked": "^0.0.28",
    "@types/node": "^6.0.46",
    "@types/pug": "^2.0.3",
    "@types/through2": "^2.0.32",
    "@types/vinyl-fs": "^0.0.28",
    "browser-sync": "2.17.5",
    "eslint": "^3.19.0",
    "gulp": "3.9.1",
    "gulp-cssmin": "0.1.7",
    "gulp-html-replace": "1.6.1",
    "gulp-htmlmin": "3.0.0",
    "gulp-if": "2.0.1",
    "gulp-inject": "4.1.0",
    "gulp-jasmine": "2.4.2",
    "gulp-rename": "1.2.2",
    "gulp-rev": "7.1.2",
    "gulp-sass": "2.3.2",
    "gulp-util": "3.0.7",
    "jasmine-core": "^2.6.2",
    "node-fetch": "1.6.3",
    "node-progress": "^0.1.0",
    "pug": "^2.0.0-rc.1",
    "rimraf": "2.5.4",
    "systemjs-builder": "0.15.34",
    "through2": "2.0.1",
    "tslib": "^1.7.1",
    "tslint": "^4.2.0",
    "typescript": "^2.3.2",
    "typings": "^2.1.1",
    "vinyl": "2.0.0",
    "vinyl-fs": "2.4.4",
    "yargs": "^7.0.2"
  },
  "scripts": {
    "postinstall": "typings --version && typings install && npm rebuild node-sass",
    "tsc": "tsc --version && tsc -p . -w",
    "build": "rm -rf build && gulp build",
    "dist": "rm -rf dist build && gulp dist",
    "dist:serve": "npm run dist && gulp serve-dist",
    "gulp": "gulp",
    "lint": "eslint '**/*.js' && tslint 'src/**/*.{ts,tsx}'",
    "test": "gulp tsc && gulp test",
    "rsync": "rsync -azP dist/ valotas@pi:~/valotas.com",
    "aws:sync": "aws s3 sync dist s3://valotas.com",
    "aws:upload-redirect-rules": "node build/typescript/gulp/awsUploadRedirectRules.js",
    "upload-dist": "npm run aws:sync && npm run aws:upload-redirect-rules",
    "deploy": "npm version patch -m \"Release v%s\"",
    "preversion": "npm run lint && npm test",
    "postversion": "npm run dist && npm run upload-dist && git push origin master --tags",
    "start": "gulp play"
  },
  "dependencies": {
    "base64-js": "0.0.8",
    "font-awesome": "^4.2.0",
    "foundation-sites": "6.2.1",
    "marked": "0.3.5",
    "moment": "2.13.0",
    "preact": "^8.1.0",
    "preact-render-to-string": "^3.6.0",
    "prismjs": "^1.6.0",
    "systemjs": "0.19.41"
  },
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "es6": true,
      "node": true
    },
    "globals": {
      "require": true,
      "module": true
    },
    "rules": {
      "arrow-parens": 2,
      "arrow-spacing": 2,
      "comma-dangle": [
        2,
        "never"
      ],
      "constructor-super": 2,
      "consistent-this": [
        2,
        "self"
      ],
      "eqeqeq": 2,
      "curly": 2,
      "no-var": 2,
      "one-var": [
        2,
        "never"
      ],
      "prefer-arrow-callback": 2,
      "strict": [
        2,
        "safe"
      ]
    }
  }
}
