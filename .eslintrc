{
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "evn": {
    "es6": true
  },
  "globals": {
    "require": true,
    "module": true
  },
  "rules": {
    "arrow-parens": 2,
    "arrow-spacing": 2,
    "constructor-super": 2,
    "no-var": 2,
    "prefer-arrow-callback": 2,
    "one-var": [2, "never"]
  }
}
