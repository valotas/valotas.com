  - var subtitle = 'Things to remember | Programming stuff :)'
  
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width, initial-scale=1.0')
      title= title + ' - ' + subtitle
      link(rel='stylesheet', href= asset('/main.css'))
      link(rel='shortcut icon', href= assets + '/favicon.ico')
      script.
        (function(w){if (window.location.hostname==='blog.valotas.com') { window.location = window.location.toString().replace('blog.valotas.com/', 'valotas.com/');}})(window);

