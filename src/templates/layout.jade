  body
    .jumbotron
      .container
        .col-md-3
          a.photo.img-rounded(href='/')
        div.signature.col-md-9
          h1.whitebg.row= title
          p.whitebg.row
            block subtitle
              span= subtitle
          .social.whitebg.row
              a(href='https://github.com/valotas' target="_blank")
                i.fa.fa-github-square.fa-2x
              a(href='https://www.facebook.com/valotas' target="_blank")
                i.fa.fa-facebook-square.fa-2x
              a(href='https://twitter.com/valotas' target="_blank")
                i.fa.fa-twitter-square.fa-2x
              a(href='http://www.linkedin.com/in/valotas' target="_blank")
                i.fa.fa-linkedin-square.fa-2x
