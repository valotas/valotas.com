extends layout

block content
  div#index-content
    each article, index in articles
      .col-md-4
        .article
          h2.header
            a(href=article.page.link())= article.page.data.title
          span.badge.date= article.date()
          div.descr !{article.description()}
            p.more
              a.btn.btn-primary(href=article.page.link())
                | more&nbsp
                i.fa.fa-angle-double-right
      if (index + 1) % 3 === 0
        .clearfix
