extends layout

block title
  | Georgios Valotasios personal stuff

block content
  div#index-content
    each article, index in articles
      .col-md-4
        .article
          h2.header
            a(href=article.page.link())= article.page.data.title
          span.badge= article.date()
          div.descr
            p !{article.description()}
            p.more
              a.btn.btn-primary(href=article.page.link()) more
      if (index + 1) % 3 === 0
        .clearfix
