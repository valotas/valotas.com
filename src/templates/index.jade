extends layout

block title
  | Georgios Valotasios personal stuff

block content
  div#index-content
    each page, index in pages
      .col-md-4
        .article
          h2.header
            a(href=page.filename)= page.filename
          //span.badge= page.article.date('YYYY-MM-DD')
          span.badge= page.date
          div.descr
            //!{ article.intro() }
            !{page}
            p.more
              a.btn.btn-primary(href=page.filename) more
      if (index + 1) % 3 === 0
        .clearfix

