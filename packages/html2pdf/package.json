{
  "name": "@valotas/html2pdf",
  "version": "3.14.2",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/valotas/valotas.com.git"
  },
  "private": true,
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist node_modules",
    "lint": "eslint \"src/**/*.+(ts|js|tsx|jsx)\"",
    "fix": "npm run lint -- --fix",
    "build": "tsc -p .",
    "watch:build": "tsc -p . -w",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --no-cache",
    "watch:test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --watch",
    "convert": "npm run build && node dist/convert.js",
    "read-metadata": "npm run build && node dist/read-metadata.js",
    "preversion": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "playwright": "^1.48.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.1"
  }
}
