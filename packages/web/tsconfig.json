{
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",
    "target": "es5",
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "jsx": "react",
    "jsxFactory": "h",
    "importHelpers": true
  },
  "exclude": [
    "node_modules"
  ]
}
