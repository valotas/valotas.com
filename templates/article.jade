
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ article.title() }

block header
  .page-header
    h1= article.title()
  p.date
    span posted on: &nbsp;
    span= article.date('YYYY-MM-DD')

block content
  article.article
    section.content!= page.content()

  #footer-actions.row
    .btn-group
      a.btn.btn-default(href=sitemap.homepage().url) 
        i.fa.fa-home
        | &nbsp; Home
      a.btn.btn-default(href='#') Top&nbsp;
        i.fa.fa-toggle-up
