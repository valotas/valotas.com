extends layout

block title
  | 'Georgios Valotasios' personal stuff'

block content
  div#index-content
    each article, index in articles.all()
      .col-md-4
        .article
          h2.header
            a(href=article.url())= article.title()
          span.badge= article.date('YYYY-MM-DD')
          div.descr
            !{ article.intro() }
            p.more
              a.btn.btn-primary(href=article.url()) more
      if (index + 1) % 3 === 0
        .clearfix

